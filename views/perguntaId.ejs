<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form action="/responder" method="POST">
            <label class="perguntaId">Resposta</label>
            <textarea name="corpo" placeholder="Digite sua resposta" class="form-control" required></textarea>
            <br>
            <input type="hidden" name="perguntaId" value="<%= pergunta.id %>"> <!-- hidden esconde inputs -->
            <button type="submit" class="btn">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% resposta.forEach(r => { %>
            <div class="card">
                <div class="card-body">
                    <%= r.corpo %>
                </div>
            </div>
            <br>
        <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs') %>
