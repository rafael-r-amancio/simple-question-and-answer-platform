<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/perguntas" class="btn">Perguntar</a>
        <br>
        <% perguntas.forEach(p => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= p.titulo %></p>
                </div>
                <div class="card-footer">
                    <!-- Colocanndo id dinamicamente -->
                    <a href="pergunta/<%= p.id %>"> 
                        <button class="btn">Responder</button>
                    </a>    
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs') %>
